mkdir -p .vscode

cat << 'EOF' > .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
        "label": "Render Quarto book (PDF)",
        "type": "shell",
        "command": "quarto render . --to pdf",
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "reveal": "always",
            "panel": "shared",
            "clear": false
        },
        "problemMatcher": []
        }
    ]
}
EOF